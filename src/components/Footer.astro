---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/resume">Resume</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Connect</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://github.com/melvinmupondori">GitHub</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://linkedin.com/in/melvinmupondori">LinkedIn</ExternalLink>
          </li>
          <li>
            <ExternalLink href="mailto:melvin.mupondori@example.com">Email</ExternalLink>
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75] text-gray-600 dark:text-gray-300">
          Senior Full-Stack Engineer passionate about creating accessible, scalable web applications with modern technologies.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} Melvin Mupondori. All rights reserved.
      </p>
      <p>
        Built with <ExternalLink href="https://astro.build/">Astro</ExternalLink> and ❤️
      </p>
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
