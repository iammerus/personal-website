---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Enhanced Header Component
 *
 * @description A modern, animated header with improved UX and visual appeal
 */
---

<header class="header-enhanced">
  <SkipLink />
  
  <!-- Animated background gradient -->
  <div class="header-bg-gradient"></div>
  
  <!-- Floating particles effect -->
  <div class="floating-particles">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
  </div>
  
  <Navigation>
    <li class="menu-item nav-link">
      <a href="/" class="nav-anchor">
        <span class="nav-text">Home</span>
        <div class="nav-underline"></div>
      </a>
    </li>
    <li class="menu-item nav-link">
      <a href="/portfolio/" class="nav-anchor">
        <span class="nav-text">Portfolio</span>
        <div class="nav-underline"></div>
      </a>
    </li>
    <li class="menu-item nav-link">
      <a href="/blog/" class="nav-anchor">
        <span class="nav-text">Blog</span>
        <div class="nav-underline"></div>
      </a>
    </li>
    <li class="menu-item nav-link">
      <a href="/resume/" class="nav-anchor">
        <span class="nav-text">Resume</span>
        <div class="nav-underline"></div>
      </a>
    </li>
    <li class="menu-item nav-link">
      <a href="/contact/" class="nav-anchor contact-cta">
        <span class="nav-text">Contact</span>
        <div class="nav-underline"></div>
      </a>
    </li>
    <li class="menu-item social-icon github-icon">
      <a href="https://github.com/iammerus" aria-label="GitHub Profile" class="social-link">
        <div class="icon-wrapper">
          <Icon name="lucide:github" />
          <div class="icon-glow"></div>
        </div>
        <span class="sr-only">Go to my GitHub profile</span>
      </a>
    </li>
    <li class="menu-item social-icon linkedin-icon">
      <a href="https://www.linkedin.com/in/melvin-mupondori-815318210/" aria-label="LinkedIn Profile" class="social-link">
        <div class="icon-wrapper">
          <Icon name="lucide:linkedin" />
          <div class="icon-glow"></div>
        </div>
        <span class="sr-only">Go to my LinkedIn profile</span>
      </a>
    </li>
    <li class="menu-item theme-toggle">
      <div class="theme-wrapper">
        <DarkMode>
          <div slot="light" class="theme-icon">
            <Icon name="lucide:moon" />
            <div class="icon-glow"></div>
          </div>
          <div slot="dark" class="theme-icon">
            <Icon name="lucide:sun" />
            <div class="icon-glow"></div>
          </div>
        </DarkMode>
      </div>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  .header-enhanced {
    position: relative;
    overflow: hidden;
    min-height: fit-content;
    
    // Animated background gradient
    .header-bg-gradient {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        135deg,
        rgba(59, 130, 246, 0.05) 0%,
        rgba(139, 92, 246, 0.03) 50%,
        rgba(16, 185, 129, 0.05) 100%
      );
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
    }
    
    &:hover .header-bg-gradient {
      opacity: 1;
    }
    
    // Floating particles animation
    .floating-particles {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
      
      .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: linear-gradient(45deg, #3b82f6, #8b5cf6);
        border-radius: 50%;
        opacity: 0.3;
        
        &.particle-1 {
          top: 20%;
          left: 10%;
          animation: float 6s ease-in-out infinite;
        }
        
        &.particle-2 {
          top: 60%;
          right: 15%;
          animation: float 8s ease-in-out infinite reverse;
        }
        
        &.particle-3 {
          bottom: 30%;
          left: 80%;
          animation: float 7s ease-in-out infinite;
        }
      }
    }
    
    // Enhanced navigation links
    .nav-link {
      position: relative;
      
      .nav-anchor {
        position: relative;
        display: flex;
        align-items: center;
        padding: 0.5rem 0.75rem;
        border-radius: 0.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none !important;
        
        &:hover {
          background: rgba(59, 130, 246, 0.1);
          transform: translateY(-1px);
          text-decoration: none !important;
        }
        
        &.contact-cta {
          background: linear-gradient(135deg, #3b82f6, #8b5cf6);
          color: white !important;
          font-weight: 600;
          box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
          
          &:hover {
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            transform: translateY(-2px);
          }
          
          .nav-underline {
            display: none;
          }
        }
        
        .nav-text {
          position: relative;
          z-index: 2;
        }
        
        .nav-underline {
          position: absolute;
          bottom: 0;
          left: 50%;
          width: 0;
          height: 2px;
          background: linear-gradient(90deg, #3b82f6, #8b5cf6);
          transform: translateX(-50%);
          transition: width 0.3s ease;
          border-radius: 1px;
        }
        
        &:hover .nav-underline,
        &.is-active .nav-underline {
          width: 80%;
        }
      }
    }
    
    // Enhanced social icons
    .social-icon {
      .social-link {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none !important;
        
        &:hover {
          transform: translateY(-2px) scale(1.1);
          text-decoration: none !important;
        }
        
        .icon-wrapper {
          position: relative;
          display: flex;
          align-items: center;
          justify-content: center;
          
          svg {
            width: 24px;
            height: 24px;
            z-index: 2;
            position: relative;
            transition: all 0.3s ease;
          }
          
          .icon-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            transform: translate(-50%, -50%) scale(0);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            opacity: 0;
          }
        }
        
        &:hover .icon-glow {
          transform: translate(-50%, -50%) scale(1);
          opacity: 0.2;
        }
      }
      
      &.github-icon .social-link {
        &:hover {
          background: rgba(36, 41, 47, 0.1);
          
          .icon-glow {
            background: #24292f;
          }
        }
      }
      
      &.linkedin-icon .social-link {
        &:hover {
          background: rgba(10, 102, 194, 0.1);
          
          .icon-glow {
            background: #0a66c2;
          }
        }
      }
    }
    
    // Enhanced theme toggle
    .theme-toggle {
      .theme-wrapper {
        position: relative;
        
        .darkmode-toggle {
          position: relative;
          display: flex;
          align-items: center;
          justify-content: center;
          width: 44px;
          height: 44px;
          border-radius: 50%;
          border: none;
          background: transparent;
          cursor: pointer;
          transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
          
          &:hover {
            background: rgba(59, 130, 246, 0.1);
            transform: translateY(-2px) scale(1.1);
          }
          
          .theme-icon {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            
            svg {
              width: 24px;
              height: 24px;
              transition: all 0.3s ease;
            }
            
            .icon-glow {
              position: absolute;
              top: 50%;
              left: 50%;
              width: 40px;
              height: 40px;
              border-radius: 50%;
              background: linear-gradient(135deg, #fbbf24, #f59e0b);
              transform: translate(-50%, -50%) scale(0);
              transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
              opacity: 0;
            }
          }
          
          &:hover .theme-icon .icon-glow {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.2;
          }
        }
      }
    }
    
    // Override default navigation styles
    .type-icon {
      display: block;
      margin-inline: 0;
      
      svg {
        inline-size: 24px;
        block-size: 24px;
      }
    }
  }
  
  // Keyframe animations
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(180deg);
    }
  }
  
  // Mobile responsive adjustments
  @media (max-width: 768px) {
    .header-enhanced {
      .floating-particles {
        display: none; // Hide particles on mobile for performance
      }
      
      .nav-link .nav-anchor {
        padding: 0.75rem 1rem;
        
        &:hover {
          transform: none; // Reduce transforms on mobile
        }
      }
      
      .social-icon .social-link,
      .theme-toggle .darkmode-toggle {
        width: 40px;
        height: 40px;
        
        &:hover {
          transform: scale(1.05); // Reduced hover effects on mobile
        }
      }
    }
  }
  
  // Reduced motion preferences
  @media (prefers-reduced-motion: reduce) {
    .header-enhanced {
      .floating-particles {
        display: none;
      }
      
      .nav-link .nav-anchor,
      .social-icon .social-link,
      .theme-toggle .darkmode-toggle {
        transition: none;
        
        &:hover {
          transform: none;
        }
      }
      
      .particle {
        animation: none;
      }
    }
  }
</style>
